---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" 
     xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:content="http://purl.org/rss/1.0/modules/content/"
     xmlns:media="http://search.yahoo.com/mrss/">
  <channel>
    <title>{{ site.title | xml_escape }} - Professional Cleaning Blog</title>
    <description>Expert cleaning tips, guides, and professional insights from Columbus's most trusted cleaning service.</description>
    <link>{{ site.url }}{{ site.baseurl }}/blog/</link>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    <language>en-US</language>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    
    {% if site.email %}
    <managingEditor>{{ site.email }} ({{ site.title }})</managingEditor>
    <webMaster>{{ site.email }} ({{ site.title }})</webMaster>
    {% endif %}
    
    <copyright>Copyright Â© {{ 'now' | date: "%Y" }} {{ site.title }}</copyright>
    
    <image>
      <url>{{ site.url }}{{ site.baseurl }}/img/logo-quality.avif</url>
      <title>{{ site.title | xml_escape }}</title>
      <link>{{ site.url }}{{ site.baseurl }}/</link>
    </image>

    {% assign posts = site.posts | where_exp: "post", "post.noindex != true" %}
    {% for post in posts limit:20 %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <link>{{ site.url }}{{ site.baseurl }}{{ post.url }}</link>
        <guid isPermaLink="true">{{ site.url }}{{ site.baseurl }}{{ post.url }}</guid>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        
        {% if post.author %}
        <dc:creator>{{ post.author | xml_escape }}</dc:creator>
        {% endif %}
        
        <description>{{ post.description | xml_escape }}</description>
        
        {% if post.excerpt %}
        <content:encoded><![CDATA[
          {{ post.excerpt | markdownify }}
          
          <p><a href="{{ site.url }}{{ site.baseurl }}{{ post.url }}">Continue reading...</a></p>
        ]]></content:encoded>
        {% endif %}
        
        {% if post.hero %}
        <media:content 
          url="{{ site.url }}{{ site.baseurl }}/{{ post.hero }}"
          medium="image"
          type="image/avif"
          width="1200"
          height="630">
          {% if post.alt %}
          <media:description type="plain">{{ post.alt }}</media:description>
          {% endif %}
          <media:thumbnail url="{{ site.url }}{{ site.baseurl }}/{{ post.hero }}"/>
        </media:content>
        {% endif %}
        
        {% if post.category %}
        <category>{{ post.category | xml_escape }}</category>
        {% endif %}
        
        {% if post.tags %}
          {% for tag in post.tags %}
          <category>{{ tag | xml_escape }}</category>
          {% endfor %}
        {% endif %}
        
        {% if post.social_description %}
        <media:credit role="description">{{ post.social_description | xml_escape }}</media:credit>
        {% endif %}
      </item>
    {% endfor %}
  </channel>
</rss>